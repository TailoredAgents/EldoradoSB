# Web
APP_PASSWORD=change-me
SESSION_SECRET=optional-extra-secret

# App timezone (used for "today" queue + usage day boundaries)
# Default: America/New_York (observes DST)
APP_TIME_ZONE=America/New_York

# Database (Render Postgres locally via your own instance)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# X API (fill when implementing Phase 4)
X_BEARER_TOKEN=
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# X OAuth (required for posting/DM automation)
X_OAUTH_CLIENT_ID=
X_OAUTH_CLIENT_SECRET=
# Example: https://<your-render-web-url>/x/callback
X_OAUTH_REDIRECT_URI=
X_OAUTH_SCOPES=tweet.read tweet.write users.read offline.access dm.read dm.write
# Defaults are provided in code, but can be overridden if needed.
X_OAUTH_AUTHORIZE_URL=https://twitter.com/i/oauth2/authorize
X_OAUTH_TOKEN_URL=https://api.twitter.com/2/oauth2/token

# Used to encrypt OAuth tokens stored in Postgres
X_CREDENTIALS_SECRET=change-me-strong-secret

# OpenAI (fill when implementing Phase 5+)
OPENAI_API_KEY=
MODEL_EXTRACT=gpt-5-mini
MODEL_RANK=gpt-5.2
MODEL_WRITE=gpt-5.2
MODEL_EMBED=

# Budgets/caps (values TBD)
MAX_POST_READS_PER_RUN=25
MAX_POST_READS_PER_DAY=400

# Reddit (optional feeder)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=ElDoradoSBOutreachAgent/1.0 by /u/eldorado
